@page "/students"

<div class="row">
    <div class="mx-auto col-12 col-sm-10">
        <h3>Lista uczniów</h3>
    </div>

    <div class="mx-auto col-12 col-sm-10">
        <button>Dodaj ucznia</button>
    </div>

    <div class="mx-auto col-12 col-sm-10">
        @if (userService.Users.Count > 0)
        {
            @foreach (User user in userService.Users)
            {
                <div class="row p-1 m-2 ">
                    <div class="col-8 d-flex align-content-center">
                        <span class="text p-1">@user.FirstName @user.LastName</span>
                        <span class="text p-1">@user.Birthday</span>
                        <span class="text p-1">@user.Login</span>
                    </div>
                    <div class="col-4 justify-content-end">
                        <button class="btn btn-dark">Edytuj</button>
                        <button class="btn btn-dark">Usuń</button>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Brak użytkowników</p>
        }
    </div>
</div>

@code {
    protected async override Task OnInitializedAsync()
    {
        await userService.GetUsers();
        await base.OnInitializedAsync();
    }
}
